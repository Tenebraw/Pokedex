{
  "env": {
    "browser": true,
    "es2021": true,
     "jest/globals": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "no-plusplus": "off",
    "import/extensions": [
        "error",
        {
            "js": "ignorePackages"
        }
    ],
    "import/prefer-default-export": "off"

  }
}

